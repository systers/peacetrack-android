<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="10dp" >

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/cohortNameLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/addcohortactivity_name_label"
        android:paddingBottom="10dp"
        android:paddingLeft="15dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp"
        android:textColor="@color/primary_dark_material_light"
        android:textSize="17sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/cohortName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/rounded_edittext"
        android:inputType="textCapWords"
        android:paddingBottom="10dp"
        android:paddingLeft="15dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp"
        android:textColor="@color/darkgrey"
        android:textSize="17sp"
        android:textStyle="bold">
        <requestFocus/>
    </EditText>

    <TextView
        android:id="@+id/cohortDescriptionLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/addcohortactivity_description_label"
        android:paddingBottom="10dp"
        android:paddingLeft="15dp"
        android:paddingRight="10dp"
        android:paddingTop="20dp"
        android:textColor="@color/primary_dark_material_light"
        android:textSize="17sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/cohortDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/rounded_edittext"
        android:paddingBottom="10dp"
        android:paddingLeft="15dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp"
        android:textColor="@color/darkgrey"
        android:textSize="17sp"
        android:textStyle="bold"
        android:inputType="textMultiLine"
        android:lines="3"
        android:gravity="top|left" />

    <TextView
        android:id="@+id/cohortMembersLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/addcohortactivity_members_label"
        android:paddingBottom="10dp"
        android:paddingLeft="15dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp"
        android:textColor="@color/primary_dark_material_light"
        android:textSize="17sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/cohortNoOfMembers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/rounded_edittext"
        android:inputType="number"
        android:paddingBottom="10dp"
        android:paddingLeft="15dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp"
        android:textColor="@color/darkgrey"
        android:textSize="17sp"
        android:textStyle="bold"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/cohortMalesLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/addcohortactivity_males_label"
            android:paddingBottom="10dp"
            android:paddingLeft="15dp"
            android:paddingRight="10dp"
            android:paddingTop="10dp"
            android:textColor="@color/primary_dark_material_light"
            android:textSize="17sp"
            android:textStyle="bold" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/cohortMales"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:inputType="number"
            android:layout_marginLeft="96dp"
            android:layout_marginStart="96dp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/cohortFemalesLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/addcohortactivity_females_label"
            android:paddingBottom="10dp"
            android:paddingLeft="15dp"
            android:paddingRight="10dp"
            android:paddingTop="10dp"
            android:textColor="@color/primary_dark_material_light"
            android:textSize="17sp"
            android:textStyle="bold" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/cohortFemales"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:inputType="number"
            android:layout_marginLeft="96dp"
            android:layout_marginStart="96dp" />

    </RelativeLayout>

    <TextView
        android:id="@+id/cohortAgeRangeLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/addcohortactivity_agerange_label"
        android:paddingBottom="10dp"
        android:paddingLeft="15dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp"
        android:textColor="@color/primary_dark_material_light"
        android:textSize="17sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/cohortAgeRangeLower"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/rounded_edittext"
            android:inputType="number"
            android:paddingBottom="10dp"
            android:paddingLeft="15dp"
            android:paddingRight="10dp"
            android:paddingTop="10dp"
            android:textColor="@color/darkgrey"
            android:textSize="17sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/cohortToLabel"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:text="to"
            android:paddingBottom="10dp"
            android:paddingLeft="40dp"
            android:paddingRight="10dp"
            android:paddingTop="10dp"
            android:textColor="@color/primary_dark_material_light"
            android:textSize="17sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/cohortAgeRangeHigher"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/rounded_edittext"
            android:inputType="number"
            android:paddingBottom="10dp"
            android:paddingLeft="15dp"
            android:paddingRight="10dp"
            android:paddingTop="10dp"
            android:textColor="@color/darkgrey"
            android:textSize="17sp"
            android:textStyle="bold" />

    </LinearLayout>

    <TextView
        android:id="@+id/cohortPositionLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/addcohortactivity_position_label"
        android:paddingBottom="10dp"
        android:paddingLeft="15dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp"
        android:textColor="@color/primary_dark_material_light"
        android:textSize="17sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/cohortPosition"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/rounded_edittext"
        android:inputType="textCapWords"
        android:paddingBottom="10dp"
        android:paddingLeft="15dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp"
        android:textColor="@color/darkgrey"
        android:textSize="17sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/cohortOtherLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/addcohortactivity_other_label"
        android:paddingBottom="10dp"
        android:paddingLeft="15dp"
        android:paddingRight="10dp"
        android:paddingTop="20dp"
        android:textColor="@color/primary_dark_material_light"
        android:textSize="17sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/cohortOtherNotes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/rounded_edittext"
        android:paddingBottom="10dp"
        android:paddingLeft="15dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp"
        android:textColor="@color/darkgrey"
        android:textSize="17sp"
        android:textStyle="bold"
        android:inputType="textMultiLine"
        android:lines="3"
        android:gravity="top|left" />

    <Button
	  android:id="@+id/savecohortbutton"
	  android:layout_width="fill_parent"
	  android:layout_height="wrap_content"
	  android:layout_marginTop="10dp"
	  android:layout_marginLeft="10dp"
	  android:layout_marginRight="10dp"
	  android:padding="10dp"
	  android:text="@string/save"
      android:textColor="@color/darkgrey"
	  android:textSize="22sp" />

</LinearLayout>
</ScrollView>
