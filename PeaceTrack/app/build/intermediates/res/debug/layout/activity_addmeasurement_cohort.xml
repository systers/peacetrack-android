<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:id="@+id/scrollView">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/measurementNameLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/addactivityactivity_title_label"
            android:paddingBottom="10dp"
            android:paddingLeft="15dp"
            android:paddingRight="10dp"
            android:paddingTop="10dp"
            android:textColor="@color/primary_dark_material_light"
            android:textSize="17sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/measurementName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/rounded_edittext"
            android:inputType="textCapWords"
            android:paddingBottom="10dp"
            android:paddingLeft="15dp"
            android:paddingRight="10dp"
            android:paddingTop="10dp"
            android:textColor="@color/darkgrey"
            android:textSize="17sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/measurementDescriptionLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/addactivityactivity_description_label"
            android:paddingBottom="10dp"
            android:paddingLeft="15dp"
            android:paddingRight="10dp"
            android:paddingTop="20dp"
            android:textColor="@color/primary_dark_material_light"
            android:textSize="17sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/measurementDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/rounded_edittext"
            android:inputType="textCapWords"
            android:paddingBottom="10dp"
            android:paddingLeft="15dp"
            android:paddingRight="10dp"
            android:paddingTop="10dp"
            android:textColor="@color/darkgrey"
            android:textSize="17sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/measurementOutcomeLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/measurementactivity_outcome_label"
            android:paddingBottom="10dp"
            android:paddingLeft="15dp"
            android:paddingRight="10dp"
            android:paddingTop="20dp"
            android:textColor="@color/primary_dark_material_light"
            android:textSize="17sp"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/measurementOutcomeSpinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:paddingBottom="10dp"
            android:paddingRight="10dp" />

        <TextView
            android:id="@+id/measurementDateLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/addactivityactivity_date_label"
            android:paddingBottom="10dp"
            android:paddingLeft="15dp"
            android:paddingRight="10dp"
            android:paddingTop="20dp"
            android:textColor="@color/primary_dark_material_light"
            android:textSize="17sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/measurementDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/rounded_edittext"
            android:hint="@string/activityDateHint"
            android:inputType="none"
            android:paddingBottom="10dp"
            android:paddingLeft="15dp"
            android:paddingRight="10dp"
            android:paddingTop="10dp"
            android:textColor="@color/darkgrey"
            android:textColorHint="#969696"
            android:textSize="17sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/measurementOutcomeDataLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/measurementactivity_outcome_data_label"
            android:paddingBottom="10dp"
            android:paddingLeft="15dp"
            android:paddingRight="10dp"
            android:paddingTop="20dp"
            android:textColor="@color/primary_dark_material_light"
            android:textSize="17sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/measurementOutcomeData"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/rounded_edittext"
            android:inputType="textCapWords"
            android:paddingBottom="10dp"
            android:paddingLeft="15dp"
            android:paddingRight="10dp"
            android:paddingTop="10dp"
            android:textColor="@color/darkgrey"
            android:textSize="17sp"
            android:textStyle="bold" />


        <Button
            android:id="@+id/saveMeasurementButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center|bottom"
            android:layout_marginEnd="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:text="@string/save"
            android:textColor="@color/darkgrey"
            android:textSize="22sp" />

    </LinearLayout>
</ScrollView>
